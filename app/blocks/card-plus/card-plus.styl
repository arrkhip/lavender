.card-plus
	width 100%
	max-width 260px
	color white

	&__icon
		width 78px
		height 78px
		margin-bottom 20px
		fill rgba(255, 255, 255, .5)

	&__title
		margin-bottom 15px
		font 600 2rem/2.2rem font-main

	&__descr
		font-size 1.4rem
		line-height 2rem
		
	
	+width-sm()
		display flex
		align-items flex-start
		max-width 100%
		
		&__icon
			margin-bottom 0
			margin-right 20px
			flex-shrink 0
			

	@media (min-width: 480px) and (max-width: 992px)
		
		&__title 
			font-size 2.2rem
			line-height 1.2em
			
		&__descr 
			font-size 1.6rem
			
	