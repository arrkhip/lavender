.card-recall
	width 100%	
	max-width 270px
	padding 26px 23px 23px
	border 1px solid #d1d1d1

	&__photo
		width 120px
		height 120px
		margin-bottom 30px
		border-radius 50%
		overflow hidden

	&__title
		margin-bottom 15px
		font-size 2rem
		line-height 2.2rem
		font-weight 600
		letter-spacing .2px
		
	&__descr
		margin-bottom 20px
		font 300 1.5rem/2.2rem font-main
