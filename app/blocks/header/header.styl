.header
	position fixed
	top 0
	left 0
	width 100%
	padding-top 35px
	padding-bottom 18px
	background violet-dark url('../img/header-decor.png') no-repeat center top
	background-size 269px
	overflow hidden
	z-index 9
	
	&::after
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 350px
		background radial-gradient(ellipse at center,rgba(255, 255, 255, 0.15) 0,rgba(255, 255, 255, .01) 47%,rgba(255, 255, 255, 0) 100%)			
		z-index -1
		
	& + div,
	& + section
		margin-top 164px
		
	.grid
		display flex
		flex-wrap wrap
		align-items flex-start

	&__info
		display inline-flex
		align-items flex-start
		margin-right 30px

		&-icon
			width 23px
			height 23px
			margin-right 10px
			fill rgba(255, 255, 255 .25)

		&-title
			margin-bottom 10px
			font-weight 600
			color white

		&-descr
			font-size 1.5rem
			color violet-light

	&__social

		&-item:not(:last-child)
				margin-right 17px
				
		svg 
			width: 24px
			height: 24px
			fill rgba(255, 255, 255, .7)
			trs()
				
			&:hover
				opacity .6

	&__logo
		padding-bottom 28px
		margin 0 auto
		font 400 4.4rem/1 font-decor
		color white

	&__phone
		
		&-item
			display block
			font-size 2rem
			font-weight 600
			color white
			trs()
			
			&:not(:last-child)
				margin-bottom 12px
				
			&:hover 
				opacity .6

	&__nav
		width calc(100% - 200px)
		padding-top 23px
		margin-right auto
		border-top 1px solid rgba(255, 255, 255, .12)

		&-list
			display inline-flex
			justify-content space-between
			align-items flex-start
			width 100%

		&-item
		
			a
				font-size 15px
				color white
				trs(color)
				
			&--active
				a 
					color violet-light
			
			&:not(.header__nav-item--active) a 
				trs()
				
				&:hover
					opacity .6
					

	+width-lg()
	
		&__info
			margin-right 20px
			
		&__logo
			font-size 3.8rem
			

	+width-md()
		position static
		padding-top 45px
		padding-bottom 42px
		background-size auto
		
		& + div,
		& + section
			margin-top 0
		
		&::after
			display none
			
		.grid
			position relative
			justify-content center
			
			&::after
				content ''
				flex 0 0 100%
				height 0
		
		&__logo
			order -1
			width 100%
			padding-bottom 42px
			text-align center
			
		&__info
			margin-right 0
			
			&-icon
				width 41px
				height 41px
			
			&-title
				font-size 2rem
			
			&-descr
				font-size 1.8rem
			
			&--location
				margin-bottom 35px
			
			&--schedule
				order 1
				margin-right 20px
				
		&__social
			align-self center
			order 2
			
			svg
				width 35px
				height 35px
				
		&__phone 
			position relative
			order 2
			width 100%
			padding-top 55px
			margin-top 44px
			margin-bottom 41px
			text-align center
			
			&::before
				content ''
				position absolute
				top 0
				left 0
				width 100%
				height 1px
				background-image  linear-gradient(to right,transparent 0,rgb(54, 51, 68) 50%,transparent 100%)
			
			&-item
				font-size 3.6rem
				line-height 4.8rem
				
		.btn 
			order 2
			min-width 254px
			height: 67px
			margin 0 auto
			font-size 2.2rem
			border-radius 40px
			
		&__nav
			display none
			
	
	+width-xs()
	
		&__info
			
			&-icon
				width 23px
				height 23px
				
			&-title
				font-size 1.6rem
				
			&-descr
				font-size 1.5rem
				
		&__social svg
			width 24px
			height 24px
			
		&__phone
			padding-top 35px
			padding-bottom 35px
			padding-bottom 35px
			margin-bottom 0
			
			&-item 
				font-size 2.2rem
				line-height 2.2rem
				
		.btn 
			min-width 190px
			height 45px
			font-size 1.6rem
	
		
			

	